
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow unauthenticated writes ONLY for the attendanceLogs collection.
    // This allows the server-side API endpoint to add logs from the ZKTeco machine.
    match /attendanceLogs/{logId} {
      allow read, write: if true;
    }

    // For all other documents, require authentication to write.
    // This rule does NOT apply to attendanceLogs because a more specific rule already matched it.
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
