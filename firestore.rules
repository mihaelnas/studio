
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow unauthenticated access for the API endpoint to push logs
    match /attendanceLogs/{logId} {
      allow read, write: if true;
    }

    // Secure all other collections to only be accessible by authenticated users.
    // This provides a secure-by-default setup for all user and application data.

    match /employees/{employeeId} {
      allow read, write: if request.auth != null;

      match /attendanceRecords/{attendanceRecordId} {
        allow read, write: if request.auth != null;
      }
      match /payrollData/{payrollDataId} {
        allow read, write: if request.auth != null;
      }
      match /payslips/{payslipId} {
        allow read, write: if request.auth != null;
      }
      match /absencePredictions/{absencePredictionId} {
        allow read, write: if request.auth != null;
      }
      match /manualCorrections/{manualCorrectionId} {
        allow read, write: if request.auth != null;
      }
      match /schedules/{employeeScheduleId} {
        allow read, write: if request.auth != null;
      }
    }

    match /shifts/{shiftId} {
      allow read, write: if request.auth != null;
    }

    match /processedAttendance/{processedAttendanceId} {
      allow read, write: if request.auth != null;
    }

    match /payslips/{payslipId} {
      allow read, write: if request.auth != null;
    }
  }
}
