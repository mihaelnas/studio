
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Collection: attendanceLogs ---
    match /attendanceLogs/{logId} {
      allow write: if request.auth != null;
      allow read: if request.auth != null;
    }

    // --- Collection: employees ---
    match /employees/{employeeId} {
      allow get: if request.auth != null;
      allow list: if request.auth != null;
      allow create: if request.auth.uid == employeeId;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
    
    // --- Subcollection: employee schedules ---
    match /employees/{employeeId}/schedules/{scheduleId} {
        allow read, write: if request.auth.uid == employeeId || get(/databases/$(database)/documents/employees/$(request.auth.uid)).data.role == 'admin';
    }
    // Allow admins to read any schedule via collection group query
    match /{path=**}/schedules/{scheduleId} {
      allow read: if request.auth != null;
    }

    // --- Collection: manualCorrections ---
    match /manualCorrections/{correctionId} {
        allow read, write: if request.auth != null;
    }

    // --- Collection: processedAttendance ---
    match /processedAttendance/{recordId} {
        allow list, get: if request.auth != null;
        allow write: if request.auth != null;
    }
     // --- Collection: payslips ---
    match /payslips/{payslipId} {
        allow read, write: if request.auth != null;
    }
  }
}
