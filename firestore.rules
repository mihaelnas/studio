
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /attendanceLogs/{logId} {
      allow read, write: if request.auth != null;
    }

    match /employees/{userId} {
      allow list, get: if request.auth != null;
      allow write: if request.auth.uid == userId;
      allow delete: if request.auth != null;
    }

     match /schedules/{scheduleId} {
      allow list, get: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /manualCorrections/{correctionId} {
        allow read, write: if request.auth != null;
    }

    match /processedAttendance/{recordId} {
        allow list, get, write: if request.auth != null;
    }

    match /payslips/{payslipId} {
        allow read: if request.auth != null && request.auth.uid == resource.data.employeeId;
        allow write: if request.auth != null;
    }

    match /shifts/{shiftId} {
      allow read: if request.auth != null;
    }
  }
}
