
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permettre aux scripts externes (comme votre script Python) d'écrire dans la collection des logs bruts.
    // La lecture reste protégée.
    match /attendanceLogs/{logId} {
      allow read: if request.auth != null;
      allow write: if true;
    }

    // Pour toutes les autres collections, la lecture et l'écriture ne sont autorisées que pour les utilisateurs authentifiés.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
