
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Allow public read access to all collections
    match /{document=**} {
      allow read: if true;
      allow write: if isSignedIn(); // Writes still require authentication
    }
  }
}
