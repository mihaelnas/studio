
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user roles and ownership.
    // An admin is a user whose employee document has the role 'admin'.
    function isAppAdmin() {
      // Use this check only for rules on single documents (get, update, delete)
      // It will not work efficiently or at all for list queries.
      return exists(/databases/$(database)/documents/employees/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/employees/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Checks if the requesting user is the owner of the document.
    function isOwner(employeeId) {
      return request.auth.uid == employeeId;
    }
    
    // Checks if the user is an admin or the owner of the data.
    function isAdminOrOwner(employeeId) {
      return isAppAdmin() || isOwner(employeeId);
    }
    
    // --- Collection: attendanceLogs ---
    match /attendanceLogs/{logId} {
      // Only admins or a secure server process should write raw logs.
      allow write: if isAppAdmin();
      // Admins and the specific employee can read their own logs.
      allow read: if isAppAdmin() || get(/databases/$(database)/documents/employees/$(request.auth.uid)).data.employeeId == resource.data.personnelId;
    }

    // --- Collection: employees ---
    match /employees/{employeeId} {
      // An employee can read their own profile. Admins can read any profile.
      allow get: if isAdminOrOwner(employeeId);
      
      // Allow any authenticated user to list employees.
      // This is a security tradeoff for simplicity, as custom claims are not available.
      // In a real-world high-security app, this would be restricted.
      allow list: if request.auth != null;
      
      // An authenticated user can create their own profile document.
      allow create: if isOwner(employeeId);

      // Only admins can update employee profiles.
      allow update: if isAppAdmin();
      
      // Only admins can delete.
      allow delete: if isAppAdmin();
    }
    
    // --- Subcollection: employee schedules ---
    match /employees/{employeeId}/schedules/{scheduleId} {
      // Admins or the employee themselves can read the schedule.
        allow read: if isAdminOrOwner(employeeId);
        // Only admins can write to schedules.
        allow write: if isAppAdmin();
    }

    // --- Collection: schedules (if used as top-level) ---
    match /schedules/{scheduleId} {
        // Admins can write.
        allow write: if isAppAdmin();
        // Admins and the relevant employee can read.
        allow read: if isAppAdmin() || resource.data.employeeId == request.auth.uid;
    }
    match /schedules {
      // Allow any authenticated user to list schedules for dashboard charts.
      allow list: if request.auth != null;
    }
    
    // --- Collection: manualCorrections ---
    match /manualCorrections/{correctionId} {
        // Only admins can read or write manual corrections.
        allow read, write: if isAppAdmin();
    }

    // --- Collection: processedAttendance ---
    match /processedAttendance/{recordId} {
        // Admins can list and read any record.
        allow list, get: if isAppAdmin();
        // Allow write access for admins (for corrections) and server-side processes
        allow write: if isAppAdmin();
    }
  }
}
