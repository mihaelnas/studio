
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Checks if the requesting user is the owner of the document.
    function isOwner(employeeId) {
      return request.auth.uid == employeeId;
    }
    
    // --- Collection: attendanceLogs ---
    match /attendanceLogs/{logId} {
      // Only authenticated users should write raw logs.
      allow write: if request.auth != null;
      // Admins and the specific employee can read their own logs.
      allow read: if request.auth != null;
    }

    // --- Collection: employees ---
    match /employees/{employeeId} {
      // An employee can read their own profile. Any auth user can list employees.
      allow get: if request.auth != null;
      allow list: if request.auth != null;
      
      // An authenticated user can create their own profile document.
      allow create: if isOwner(employeeId);

      // Any authenticated user can update employee profiles.
      allow update: if request.auth != null;
      
      // Any authenticated user can delete.
      allow delete: if request.auth != null;
    }
    
    // --- Subcollection: employee schedules ---
    match /employees/{employeeId}/schedules/{scheduleId} {
      // Any authenticated user can read the schedule.
        allow read: if request.auth != null;
        // Any authenticated user can write to schedules.
        allow write: if request.auth != null;
    }

    // --- Collection: schedules (if used as top-level) ---
    match /schedules/{scheduleId} {
        // Any authenticated user can write.
        allow write: if request.auth != null;
        // Any authenticated user can read.
        allow read: if request.auth != null;
    }
    match /schedules {
      // Allow any authenticated user to list schedules for dashboard charts.
      allow list: if request.auth != null;
    }
    
    // --- Collection: manualCorrections ---
    match /manualCorrections/{correctionId} {
        // Only authenticated users can read or write manual corrections.
        allow read, write: if request.auth != null;
    }

    // --- Collection: processedAttendance ---
    match /processedAttendance/{recordId} {
        // Any authenticated user can list and read any record.
        allow list, get: if request.auth != null;
        // Allow write access for authenticated users
        allow write: if request.auth != null;
    }
     // --- Collection: payslips ---
    match /payslips/{payslipId} {
        allow read, write: if request.auth != null;
    }
  }
}
