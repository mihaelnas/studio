
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // N'importe quel utilisateur authentifié peut lire les logs,
    // mais seuls les scripts avec une clé secrète peuvent écrire (géré côté backend/API)
    match /attendanceLogs/{logId} {
      allow read, write: if request.auth != null;
    }

    // Les employés ne peuvent lire et écrire que dans leur propre document
    match /employees/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Un employé peut lire son propre planning
     match /schedules/{scheduleId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.employeeId;
    }
    
    // Un employé peut lire ses propres corrections
    match /manualCorrections/{correctionId} {
        allow read, write: if request.auth != null && request.auth.uid == resource.data.employeeId;
    }

    // Un utilisateur authentifié peut lister la collection, mais ne peut lire
    // un document individuel que s'il s'agit du sien.
    match /processedAttendance/{recordId} {
        allow list, get, write: if request.auth != null;
        allow read: if request.auth != null && request.auth.uid == resource.data.employee_id;
    }

    // Les fiches de paie sont lisibles par l'employé concerné
    match /payslips/{payslipId} {
        allow read, write: if request.auth != null && request.auth.uid == resource.data.employeeId;
    }

    // Les shifts sont lisibles par tous les utilisateurs authentifiés
    match /shifts/{shiftId} {
      allow read: if request.auth != null;
    }
  }
}
