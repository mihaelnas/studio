
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Collection: attendanceLogs ---
    match /attendanceLogs/{logId} {
      allow write: if request.auth != null;
      allow read: if request.auth != null;
    }

    // --- Collection: employees ---
    match /employees/{employeeId} {
      // Allow any authenticated user to read, create, update, and delete employees.
      // UI code should enforce who can perform these actions.
      allow read, write: if request.auth != null;
    }
    
    // --- Subcollection: employee schedules ---
    // Allow any authenticated user to read/write schedules. 
    // The UI restricts planning to admins.
    match /employees/{employeeId}/schedules/{scheduleId} {
        allow read, write: if request.auth != null;
    }
    // Allow collection group query for admins (and now any auth'd user)
    match /{path=**}/schedules/{scheduleId} {
      allow read: if request.auth != null;
    }

    // --- Collection: manualCorrections ---
    match /manualCorrections/{correctionId} {
        allow read, write: if request.auth != null;
    }

    // --- Collection: processedAttendance ---
    match /processedAttendance/{recordId} {
        allow read, write: if request.auth != null;
    }
     // --- Collection: payslips ---
    match /payslips/{payslipId} {
        allow read, write: if request.auth != null;
    }
  }
}
