
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow unauthenticated writes ONLY for the attendanceLogs collection
    // This allows the server-side API endpoint to add logs from the ZKTeco machine
    match /attendanceLogs/{logId} {
      allow read, write: if true;
    }

    // For all other documents, require authentication to write
    match /{path=**}/documents/{document} {
      // Ensure this does not match the attendanceLogs collection again
      if path[0] != 'attendanceLogs' {
        allow read: if true;
        allow write: if request.auth != null;
      }
    }
  }
}
