
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAppAdmin(userId) {
      // In a real app, this would check a 'roles' subcollection or custom claims.
      // For now, we can hardcode admin UIDs or check a field on the user document.
      // Let's assume for now, nobody is an admin to lock it down.
      return false;
    }
    
    match /attendanceLogs/{logId} {
      allow read, write: if request.auth != null;
    }

    match /employees/{userId} {
      // Any authenticated user can read employee data.
      allow list, get: if request.auth != null;
      // Any authenticated user can create, update, or delete employees for now.
      // TODO: Restrict write access to HR Admins in a future update.
      allow write: if request.auth != null;
    }

     match /schedules/{scheduleId} {
      allow read, write: if request.auth != null;
    }
    
    match /manualCorrections/{correctionId} {
        allow read, write: if request.auth != null;
    }

    match /processedAttendance/{recordId} {
        allow list, get, write: if request.auth != null;
    }

    match /payslips/{payslipId} {
        // Users should only be able to read their own payslips
        allow read: if request.auth != null && request.auth.uid == resource.data.employeeId;
        // Writing payslips should be a server/admin process, for now allow any authenticated
        allow write: if request.auth != null;
    }

    match /shifts/{shiftId} {
      allow read: if request.auth != null;
    }
  }
}
