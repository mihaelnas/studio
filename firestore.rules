
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAppAdmin(userId) {
      // Pour l'instant, personne n'est admin. Cela verrouille les actions réservées aux admins.
      // Dans une future version, cela vérifierait un rôle ou une réclamation personnalisée.
      return false;
    }
    
    match /attendanceLogs/{logId} {
      // Tout utilisateur authentifié peut lire/écrire les logs bruts.
      // Dans une application réelle, l'écriture devrait être limitée au backend via une clé API.
      allow read, write: if request.auth != null;
    }

    match /employees/{employeeId} {
      // Tout utilisateur authentifié peut lister/voir les employés.
      allow list, get: if request.auth != null;
      // Tout utilisateur authentifié peut créer/mettre à jour/supprimer.
      // TODO: Restreindre l'écriture aux administrateurs RH.
      allow write: if request.auth != null;
    }

    match /schedules/{scheduleId} {
      // Permet de lire/écrire des documents individuels
      allow read, write: if request.auth != null;
    }
    
    match /schedules {
      // Permet de lister toute la collection, nécessaire pour le planning
      allow list: if request.auth != null;
    }
    
    match /manualCorrections/{correctionId} {
        allow read, write: if request.auth != null;
    }

    match /processedAttendance/{recordId} {
        allow list, get, write: if request.auth != null;
    }

    match /payslips/{payslipId} {
        // Les utilisateurs ne devraient pouvoir lire que leurs propres fiches de paie.
        allow read: if request.auth != null && resource.data.employeeId == request.auth.uid;
        // L'écriture des fiches de paie devrait être un processus serveur/admin.
        allow write: if request.auth != null;
    }

    match /shifts/{shiftId} {
      allow read: if request.auth != null;
    }
  }
}
