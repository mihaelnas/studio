
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow unauthenticated reads and writes ONLY for the attendanceLogs collection.
    // This allows the server-side API endpoint to add logs and the client to read them.
    match /attendanceLogs/{logId} {
      allow read, write: if true;
    }

    // For all other documents, require authentication for any access.
    // This rule does NOT apply to attendanceLogs because a more specific rule already matched it.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
